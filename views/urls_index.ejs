<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">

  <!--  Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
  <title>TinyApp</title>
</head>
<body>
  <%- include('partials/_header') %>
  <main style="margin: 1rem;">
    <h1 class="h3 mb-3"><strong>My URLs</strong></h1>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Short URL</th>
          <th scope="col">Long URL</th>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% for (const url in urls) { %>
          <tr>
            <td><%= url %></td>
            <td><%= urls[url].longURL %></td>
            <td><a class="btn btn-outline-primary" href="/urls/<%= url %>">Edit</a></td>
            <td><form action="/urls/<%= url %>?_method=DELETE" method="post"><button type="submit" class="btn btn-outline-danger">Delete</button></form></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  <%- include("partials/_footer") %>